<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600" prefWidth="900" stylesheets="@../styles/signin.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.SignInController">

    <center>
        <StackPane>
            <VBox alignment="CENTER">
                <VBox alignment="CENTER" spacing="20" styleClass="card">

                    
                    <Label styleClass="title" text="Sign in" />

                   
                    <VBox spacing="10" styleClass="form">

                        <Label styleClass="lbl" text="EMAIL:" />
                        <TextField fx:id="emailField" styleClass="input" />

                        <Label styleClass="lbl" text="PASSWORD:" />
                        <PasswordField fx:id="passwordField" styleClass="input" />

                        <HBox alignment="CENTER_LEFT" spacing="6">
                            <CheckBox fx:id="showPasswordCheck" text="show" />
                            <Pane HBox.hgrow="ALWAYS" />
                            <Hyperlink text="Forgot your password?" />
                        </HBox>

                        
                        <Button onAction="#handleSignIn" styleClass="sign-btn" text="SIGN" />
                    </VBox>

                    
                    <HBox alignment="CENTER">
                        <Label text="New user?" />
                        <Hyperlink fx:id="createAccountLink" text="Create an account" />
                    </HBox>

                </VBox>
            </VBox>
        </StackPane>
    </center>

</BorderPane>
