<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="application.controller.DashboardController"
            prefWidth="1200" prefHeight="700"
            style="-fx-background-color: #f5f5f5;">

    <left>
        <VBox spacing="0" style="-fx-background-color: #d4e3f0;" prefWidth="150">

            <VBox alignment="CENTER" style="-fx-background-color: #c5d9e8; -fx-padding: 30 20;">
                <Label text="ICS" style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            </VBox>
            
            <Separator style="-fx-background-color: #b0c4d4;"/>
            
            <!-- user Info Section -->
            <VBox spacing="5" style="-fx-padding: 15 15; -fx-background-color: #d4e3f0;">
                <HBox alignment="CENTER_LEFT" spacing="5">
                    <Label text="ðŸ‘¤" style="-fx-font-size: 20px;"/>
                    <Label fx:id="userNameLabel" text="*Name*" style="-fx-font-weight: bold; -fx-font-size: 12px;"/>
                </HBox>
                <Label fx:id="userProgramLabel" text="BS Computer Science" 
                       style="-fx-font-size: 10px; -fx-text-fill: #555; -fx-padding: 0 0 0 28;"/>
                <Label fx:id="studentNumberLabel" text="2024-12345" 
                       style="-fx-font-size: 10px; -fx-text-fill: #555; -fx-padding: 0 0 0 28;"/>
            </VBox>
            
            <Separator style="-fx-background-color: #b0c4d4;"/>
            
            <!-- navigation Buttons -->
            <VBox spacing="2" style="-fx-padding: 10 0;">
                <Button fx:id="dashboardBtn" text="ðŸ   Dashboard"
                        maxWidth="Infinity" 
                        style="-fx-background-color: #ffffff; -fx-text-fill: #2c3e50; -fx-alignment: CENTER-LEFT; -fx-padding: 12 20; -fx-font-size: 13px; -fx-background-radius: 20; -fx-cursor: hand;">
                    <VBox.margin>
                        <Insets left="10" right="10"/>
                    </VBox.margin>
                </Button>
                
                <Button fx:id="coursesBtn" text="ðŸ“š  Courses"
                        maxWidth="Infinity"
                        style="-fx-background-color: #5b8ab8; -fx-text-fill: white; -fx-alignment: CENTER-LEFT; -fx-padding: 12 20; -fx-font-size: 13px; -fx-background-radius: 20; -fx-cursor: hand;">
                    <VBox.margin>
                        <Insets left="10" right="10"/>
                    </VBox.margin>
                </Button>
                
                <Button fx:id="plannerBtn" text="ðŸ“…  Planner"
                        maxWidth="Infinity"
                        style="-fx-background-color: transparent; -fx-text-fill: #2c3e50; -fx-alignment: CENTER-LEFT; -fx-padding: 12 20; -fx-font-size: 13px; -fx-background-radius: 20; -fx-cursor: hand;">
                    <VBox.margin>
                        <Insets left="10" right="10"/>
                    </VBox.margin>
                </Button>
                
                <Button fx:id="aboutBtn" text="â“  About Us"
                        maxWidth="Infinity"
                        style="-fx-background-color: transparent; -fx-text-fill: #2c3e50; -fx-alignment: CENTER-LEFT; -fx-padding: 12 20; -fx-font-size: 13px; -fx-background-radius: 20; -fx-cursor: hand;">
                    <VBox.margin>
                        <Insets left="10" right="10"/>
                    </VBox.margin>
                </Button>
            </VBox>
            
            <Pane VBox.vgrow="ALWAYS"/>

            <Button text="  Logout"
                    maxWidth="Infinity"
                    style="-fx-background-color: transparent; -fx-text-fill: #2c3e50; -fx-alignment: CENTER-LEFT; -fx-padding: 12 20; -fx-font-size: 13px; -fx-cursor: hand;">
                <VBox.margin>
                    <Insets bottom="20" left="10" right="10"/>
                </VBox.margin>
            </Button>
        </VBox>
    </left>

    <center>
        <VBox style="-fx-background-color: white;">
            <!-- Header Bar -->
            <HBox alignment="CENTER_LEFT" spacing="20" 
                  style="-fx-background-color: white; -fx-padding: 20 30; -fx-border-color: #e0e0e0; -fx-border-width: 0 0 1 0;">
                <Label text="Course Catalog" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <Pane HBox.hgrow="ALWAYS"/>
                <Label text="First Semester - August 20, 2005" style="-fx-font-size: 13px; -fx-text-fill: #666;"/>
            </HBox>
            
            <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-padding: 20 30;">
                <TextField fx:id="searchField" promptText="ðŸ”  Search" 
                          prefWidth="200"
                          style="-fx-background-color: #f5f5f5; -fx-background-radius: 5; -fx-padding: 8 15; -fx-border-color: #ddd; -fx-border-radius: 5;"/>
                
                <ComboBox fx:id="filterComboBox" promptText="All" 
                         prefWidth="100"
                         style="-fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 5;"/>
            </HBox>
            
            <TableView fx:id="courseTable" VBox.vgrow="ALWAYS" 
                      style="-fx-background-color: white; -fx-padding: 0 30 30 30;">
                <columns>
                    <TableColumn fx:id="courseCodeColumn" text="Course Code" 
                                prefWidth="150" style="-fx-alignment: CENTER-LEFT;"/>
                    <TableColumn fx:id="courseTitleColumn" text="Course Title" 
                                prefWidth="280" style="-fx-alignment: CENTER-LEFT;"/>
                    <TableColumn fx:id="unitsColumn" text="Units" 
                                prefWidth="100" style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="timeColumn" text="Time" 
                                prefWidth="180" style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="availabilityColumn" text="Availability" 
                                prefWidth="150" style="-fx-alignment: CENTER;"/>
                </columns>
                <placeholder>
                    <Label text="No courses available" style="-fx-text-fill: #999;"/>
                </placeholder>
            </TableView>
        </VBox>
    </center>

</BorderPane>